{
  "kind": "collectionType",
  "collectionName": "announcements",
  "info": {
    "singularName": "announcement",
    "pluralName": "announcements",
    "displayName": "Announcement",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "catalog": {
      "type": "enumeration",
      "enum": [
        "Engineering",
        "Community",
        "Company News",
        "Customer Stories",
        "Changelog",
        "Press"
      ],
      "required": true,
      "default": "Engineering"
    },
    "displayName": {
      "type": "string"
    },
    "content": {
      "type": "json"
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Draft", "Published", "Archived"],
      "default": "Draft"
    },
    "isHighlighted": {
      "type": "boolean",
      "default": false
    }
  }
}
