{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Engineering",
        "Community",
        "Company News",
        "Customer Stories",
        "Changelog",
        "Press"
      ],
      "default": "Changelog",
      "required": true
    },
    "displayName": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": false
    },
    "content": {
      "type": "json"
    },
    "author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Draft", "Generating", "Published", "Archived"],
      "default": "Draft",
      "required": true
    },
    "isHighlighted": {
      "type": "boolean",
      "default": false
    }
  }
}
